{
  "name": "Multishot",
  "description": "Screenshot a page in multiple media queries / device sizes with a single click.",
  "version": "0.4",
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "manifest_version": 3,

  "background": {
    "service_worker": "storage.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",

  "permissions": [ "activeTab", "storage", "scripting", "downloads" ],
  "host_permissions": [ "<all_urls>" ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Open / Close the extension popup"
    },
    "take-screenshots": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Take screenshots"
    },
    "open-settings": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "Open the options page"
    }
  }
}
